#:kivy 1.0.9

<BlockMaker>:
	orientation: 'vertical'
	textinput: textinput
	TextInput:
		id: textinput
		multiline: False
		orientation: 'horizontal'
		on_text: makebutton.disabled = (self.text == '') 
	BoxLayout:
		Button: 
			id: makebutton
			text: "Make block"
			on_press: root.makeBlock()

