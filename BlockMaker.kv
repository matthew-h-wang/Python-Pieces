#:kivy 1.0.9

<BlockMaker>:
	textinput: textinput
	togglelimit: togglelimit
	limittext: limittext
	colorbutton: colorbutton
	bkgdcolorbutton: bkgdcolorbutton

	cols: 1
	size_hint_y: None
	height: self.minimum_height
	
	MyInput:
		id: textinput
		on_text: makebutton.disabled = (self.text == '') 
		on_text_validate: root.makeBlock(); 
	GridLayout:
		rows:1
		size_hint: (1,None)
		height: self.minimum_height
		Button:
			id: colorbutton
			text: 'Text'
			color: [1,1,1,1]
			size_hint_y: None 
			height: self.texture_size[1]
			size_hint_x: None
			width: self.texture_size[0] *1.5
			on_release: root.toggle_colorset()
		Button:
			id: bkgdcolorbutton
			text: 'Bkgd'
			color: [1,1,1,1]
			background_normal: ''
			background_color: [0,0,1,1]
			size_hint_y: None 
			height: self.texture_size[1]
			size_hint_x: None
			width: self.texture_size[0] *1.5
			on_release: root.toggle_bkgdcolorset()

		ToggleButton:
			id: togglelimit
			text: 'Limit:'
			size_hint_y: None 
			height: self.texture_size[1]
			size_hint_x: None
			width: self.texture_size[0] *1.5
			on_state: limittext.disabled = True if (self.state == 'normal') else False
		IntegerInput:
			id: limittext
			disabled: True


		Button: 
			id: makebutton
			text: "Make"
			size_hint_y: None 
			height: self.texture_size[1]
			size_hint_x: None
			width: self.texture_size[0] *1.5
			on_press: root.makeBlock(); textinput.focus = True

<MyInput>:
	multiline: False
	write_tab: False
	size_hint_y: None
	height: self.minimum_height

<ColorSet>:
	cols:5
	spacing: [0,0]
	size_hint: (1,None)
	height: self.minimum_height
	ColorSetButton:
		text: 'White'
		color: [1,1,1,1]
	ColorSetButton:
		text: 'Grey'
		color: [.6,.6,.6,1]
	ColorSetButton:
		text: 'Black'
		color: [0,0,0,1]	
	ColorSetButton:
		text: 'Red'
		color: [1,.2,.2,1]
	ColorSetButton:
		text: 'Blue'
		color: [0,0,1,1]
	ColorSetButton:
		text: 'Green'
		color: [0,.8,0,1]
	ColorSetButton:
		text: 'Yellow'
		color: [1,1,.1,1]
	ColorSetButton:
		text: 'Cyan'
		color: [0,.2,.6,1]
	ColorSetButton:
		text: 'Purple'
		color: [.6,0,1,1]

<BkgdColorSet>:
	cols:5
	spacing: [2,2]
	size_hint: (1,None)
	height: self.minimum_height
	BkgdColorSetButton:
		text: 'None'
		background_color: [0,0,0,0]
	BkgdColorSetButton:
		text: 'White'
		background_color: [1,1,1,1]
	BkgdColorSetButton:
		text: 'Grey'
		background_color: [.5,.5,.5,1]
	BkgdColorSetButton:
		text: 'Black'
		background_color: [0,0,0,1]
	BkgdColorSetButton:
		text: 'Red'
		background_color: [1,0,0,1]
	BkgdColorSetButton:
		text: 'Blue'
		background_color: [0,0,1,1]
	BkgdColorSetButton:
		text: 'Green'
		background_color: [0,1,0,1]
	BkgdColorSetButton:
		text: 'Yellow'
		background_color: [1,1,0,1]
	BkgdColorSetButton:
		text: 'Cyan'
		background_color: [0,1,1,1]
	BkgdColorSetButton:
		text: 'Purple'
		background_color: [1,0,1,1]

<ColorSetButton>:
	size_hint_y: None 
	height: self.texture_size[1]
	on_press: self.updateButton()

<BkgdColorSetButton>:
	size_hint_y: None 
	background_normal: ''
	height: self.texture_size[1]
	on_press: self.updateButton()
