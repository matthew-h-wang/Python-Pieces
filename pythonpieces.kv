#:kivy 1.0.9

Appspace:
	menubar: menubar
	workspace: workspace
	dragcontroller: dragcontroller
	MenuBar:
		id: menubar
		size_hint: (1, None)
		height: 30
		pos_hint:{'x':0, 'top':1}
	Workspace:
		id: workspace
		size_hint: (1,None)
		pos_hint: {'x':0, 'y':0}
		height: root.height - menubar.height

	DragController:
		id: dragcontroller

	Slider:
		pos_hint: {'right':1, 'y':0}
		size_hint: (.1, .05)
		id: textsizeslider
		min: 12
		max: 48
		step: 2
		value: 24
		on_value: root.workspace.updateFontSize(self.value)
#	Label:
#		font_size: textsizeslider.value
#		text: str(textsizeslider.value)
#		right: textsizeslider.x
#		y: textsizeslider.y

<Workspace>:
	orientation: 'horizontal'


<Splitter>: 
	sizable_from: 'right'
	pos_hint: {'top': 1, 'x': 0}


<ScrollView>:
	size_hint: (1,1)
	do_scroll_x: False
	do_scroll_y: True
	scroll_timeout: 50