#:kivy 1.0.9

Appspace:
	menubar: menubar
	workspace: workspace
	dragcontroller: dragcontroller
	MenuBar:
		id: menubar
		size_hint: (1, .05)
		pos_hint:{'x':0, 'y':.95}
	Workspace:
		id: workspace
		size_hint: (1,.95)
		pos_hint: {'x':0, 'y':0}

#	PrintButton:
#		size_hint: (1, .2)
#		pos_hint: {'x':0, 'y':0}
#		text: "print rep to console"
#		on_press: self.printVersion(workspace = workspace)
	DragController:
		id: dragcontroller


<Workspace>:
	orientation: 'horizontal'


<Splitter>: 
	sizable_from: 'right'
	pos_hint: {'top': 1, 'x': 0}


