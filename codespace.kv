#:kivy 1.0.9

<CodeSpace>:
	orientation: 'tb-lr'
	size_hint: (.7, 1)
	pos_hint:{'top':1, 'x':.3}		


<CodeLine>:
	height: self.fontsize + 2 * self.spacing[1]
	on_minimum_height: self.height = max(self.minimum_height, self.fontsize + 2 * self.spacing[1])
	spacing: [2,2]
	orientation: 'lr-tb'
	size_hint_y: None
	canvas.after:
		Color:
			rgba: .5, .5, .5, 1
        Line:
            rectangle: self.x,self.y,self.width,self.height



<CodeLinePlus>:
	draghandle: draghandle
	newline: newline
	codeline: codeline
	removeline: removeline

	orientation: 'horizontal'
	height: self.codeline.height
	size_hint: (1,None)
	Button:
		id: draghandle
		text:"D"
		size_hint_x: None
		height: root.codeline.height
		width: root.fontsize
	Button:
		id: newline
		text: "V"
		size_hint_x: None
		height: root.codeline.height
		width: root.fontsize
		on_release: root.add_line()

	CodeLine:
		id: codeline
		fontsize: root.fontsize

	Button:
		id: removeline
		text: "X"
		size_hint_x: None
		height: root.codeline.height
		width: root.fontsize
		on_release: root.remove_line()

<BlockSpace>:
	size_hint: (.3, 1)
	pos_hint:{'top':1, 'x':0}

	orientation: 'tb-lr'

	spacing: [0,10]

	canvas.after:
		Color:
			rgba: .5, .5, .5, 1
        Line:
            rectangle: self.x,self.y,self.width,self.height

