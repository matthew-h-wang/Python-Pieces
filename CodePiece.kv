#:kivy 1.0.9



<CodePieceGenerator>:
	size_hint: None, None
	text: self.codetext
	canvas.before:
		Color:
			rgba: root.bkgdColor
		Rectangle:
			pos: self.pos
			size: self.size
	size: self.texture_size

<CodePieceGeneratorLimited>:
	text: self.codetext + ' (x' + str(root.count) + ')'
#	Label:
#		id: countlabel
#		text: ' (' + str(root.count) + ')'
