<CodePieceGenerator>:

	size_hint: None, None
	text: self.codetext
	canvas.before:
		Color:
			rgba: root.bkgdColor
		Rectangle:
			pos: self.pos
			size: self.size
		Color:
			rgba: [x*.5 for x in root.bkgdColor]
		Line:
			width: 1
			points: self.x + 1,self.y + 1,self.right - 1, self.y + 1,self.right - 1,self.top - 1
		Color:
			rgba: [ .5 + x*.5 for x in root.bkgdColor]
		Line:
			width:1
			points: self.x + 1,self.y + 1,self.x + 1, self.top -1,self.right - 1,self.top - 1
	size: self.texture_size

<CodePieceGeneratorLimited>:
	text: self.codetext + ' (x' + str(root.count) + ')'
